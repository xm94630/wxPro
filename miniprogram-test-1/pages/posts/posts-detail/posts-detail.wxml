<view class="container">
  <image class="head-image" src="{{isPlayingMusic?postData.music.coverImg:postData.headImgSrc}}"></image>
  <image catchtap="onMusicTap" class="audio" src="{{isPlayingMusic?'/images/music/stop.png':'/images/music/play.png'}}"></image>
  <view class="author-date">
    <image class="avatar" src="/images/icon/avatar.png"></image>
    <text class="author">{{postData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.dateTime}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image wx:if="{{collected}}" catchtap="onCollectionTap" class="share-image" src="/images/icon/sellected.png"></image>
      <image wx:else catchtap="onCollectionTap"  class="share-image" src="/images/icon/unsellected.png"></image>
      <image catchtap="onShowTap" wx:if="{{shared}}" class="share-image" src="/images/icon/share.png"></image>
      <image catchtap="onShowTap" wx:else class="share-image" src="/images/icon/share.png"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postData.detail}}</text>
</view>